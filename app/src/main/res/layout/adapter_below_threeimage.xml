<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_below_threeimage_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/adapter_below_threeimage_rightimage"
        android:layout_width="109dp"
        android:layout_height="96dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/adapter_below_threeimage_right"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/adapter_below_threeimage_title"
        app:layout_constraintTop_toBottomOf="@+id/adapter_below_threeimage_title"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/adapter_below_threeimage_right"
        android:layout_width="110dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toStartOf="@+id/adapter_below_threeimage_leftimage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/adapter_below_threeimage_rightimage"
        app:layout_constraintTop_toTopOf="@+id/adapter_below_threeimage_rightimage"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/adapter_below_threeimage_leftimage"
        android:layout_width="110dp"
        android:layout_height="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/adapter_below_threeimage_right"
        app:layout_constraintTop_toTopOf="@+id/adapter_below_threeimage_right"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/adapter_below_threeimage_rightimage"
        app:layout_constraintTop_toBottomOf="@+id/adapter_below_threeimage_rightimage" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="2.2万跟帖"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="15分钟前"
        app:layout_constraintBottom_toBottomOf="@+id/textView18"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="@+id/adapter_below_threeimage_leftimage"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        />

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="#aaa"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />
</android.support.constraint.ConstraintLayout>
