<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.topic.activity.ControlFragmentNumActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_topic"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:drawableLeft="@drawable/guanbi"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:text="长按可拖动排序"
        android:textColor="#c7c7cb"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="56dp"
        android:layout_height="35dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginEnd="11dp"
        android:background="@drawable/bianji_button"
        android:text="编辑"

        android:textColor="#ff0000" />


</RelativeLayout>